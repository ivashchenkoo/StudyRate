@model StudyRate.Domain.Entities.Group

@{
    ViewData["Title"] = "Група | StudyRate";
}

<div id="content">
    <h2>Змінити</h2>

    <h4>Група</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="YearOfEntering" class="control-label"></label>
                    <input asp-for="YearOfEntering" class="form-control" />
                    <span asp-validation-for="YearOfEntering" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SpecialtyID" class="control-label"></label>
                    <select asp-for="SpecialtyID" class="form-control" asp-items="ViewBag.SpecialtyID"></select>
                    <span asp-validation-for="SpecialtyID" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Зберегти" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Попередня сторінка</a>
    </div>
</div>

