
@{
    ViewData["Title"] = "Головна сторінка | StudyRate";
}

<div class="content">
    <div style="width:100%;margin:50px;font-size:40px">
        <p style="">
            <h1>Привіт! Це Study Rate!</h1>
        </p>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="max-width:1000px">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/images/first.jpg" alt="Los Angeles" style="width:100%;max-height:700px">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 style="color:white"></h5>
                        <p style="color:white">На цьому сайті можливо переглянути рейтинг успішності студентів ВНЗ</p>
                        <p></p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/images/second.jpg" alt="Chicago" style="width:100%;max-height:700px">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 style="color:white"></h5>
                        <p style="color:white">Авторизований студент може переглянути особистий розширений рейтинг</p>
                        <p></p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/images/third.jpg" alt="New york" style="width:100%;max-height:700px">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 style="color:white"></h5>
                        <p style="color:white">Викладач може виставити оцінки своїм студентам зручними способами</p>
                        <p></p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="inner">
        <div class="table-responsive" style="margin:50px">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>У нашому університеті є:</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>Факультетів</th>
                        <td>5</td>
                    </tr>
                    <tr>
                        <th>Кафедр</th>
                        <td>25</td>
                    </tr>
                    <tr>
                        <th>Спеціальностей</th>
                        <td>20</td>
                    </tr>
                    <tr>
                        <th>Груп</th>
                        <td>100</td>
                    </tr>
                    <tr>
                        <th>Студентів</th>
                        <td>3000</td>
                    </tr>
                    <tr>
                        <th>Викладачів</th>
                        <td>300</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>